{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active C++ to exefiles",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}\\exefiles\\${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build & Run active C++",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "start",
        "cmd",
        "/k",
        "${workspaceFolder}\\exefiles\\${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": "Build active C++ to exefiles",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    }
  ]
}
