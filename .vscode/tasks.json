{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active C++ file to exe files",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/exe files/${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
